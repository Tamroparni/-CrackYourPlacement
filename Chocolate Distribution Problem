class Solution
{
    public long findMinDiff (ArrayList<Integer> a, int n, int m)
    {
        // your code here
        
        Collections.sort(a);
        long ans = Long.MAX_VALUE;
        for (int i = 0; (i + m - 1) < n; i++) {
            long min = a.get(i + m - 1) - a.get(i);
            if (min < ans) {
                ans = min;
            }
        }
        
        return ans;
    }
}
