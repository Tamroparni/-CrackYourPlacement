class Solution {
    public void sortColors(int[] nums) {
        int r =0;
        int w =0;
        for(int num : nums){
            if(num == 0)
                r++;
            else if(num == 1)
                w++;
        }
        for(int i = 0; i<r; i++){
            nums[i] = 0;
        }
        for(int i = r; i<r+w; i++){
            nums[i] = 1;
        }
        for(int i = r+w; i<nums.length; i++){
            nums[i] = 2;
        }
    }
}
